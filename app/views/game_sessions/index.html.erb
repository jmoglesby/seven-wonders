<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Game Sessions</h1>

  <table>
    <thead>
      <tr>
        <th>Game ID</th>
        <th>Created By</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @game_sessions.each do |game_session| %>
        <tr>
          <td><%= game_session.id %></td>
          <td><%= game_session.creator_user_id %></td>
          <td><%= link_to 'Show', game_session %></td>
          <td><%= link_to 'Edit', edit_game_session_path(game_session) %></td>
          <td><%= link_to 'Destroy', game_session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'Join', game_session_path(game_session), method: :patch, data: { confirm: 'Join game?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Game Session', new_game_session_path %>
</div>
